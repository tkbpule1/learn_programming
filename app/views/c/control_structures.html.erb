<div class="code">
  // nth Fibonacci Number
  <ul>
    <li>#include &#060iostream></li>
    <li>using namespace std;</li>
    <li>int main()</li>
    <li>{</li>
      <ul>
        <li>int previous1;</li>
        <li>int previous2;</li>
        <li>int current;</li>
        <li>int counter;</li>
        <li>int nthFibonacci;</li>
        <br>
        <li>cout << "Enter the first two fibonacci numbers: ";</li>
        <li>cin >> previous1 >> previous2;</li>
        <li>cout << "Enter the position of the sequence: "</li>
        <li>if (nthFibonnaci == 1)</li>
        <ul>
          <li>current = previous1;</li>
        </ul>
        <li>else if (nthFibonacci == 2)</li>
        <ul>
          <li>current = previous2;</li>
        </ul>
        <li>else</li>
        <li>{</li>
          <ul>
            <li>counter = 3</li>
            <li>while (counter <= nthFibonacci)</li>
            <li>{</li>
            <ul>
              <li>current = previous2 + previous1;</li>
              <li>previous1 = previous2;</li>
              <li>previous2 = current;</li>
              <li>counter++;</li>
            </ul>
            <li>}</li>
          </ul>
        <li>}</li>
      </ul>
      cout << "The Fibonacci number at position ";<br>
      cout << nthFibonacci << " is: " << current << endl;
    <li>}</li>
  </ul>
