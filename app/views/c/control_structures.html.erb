<h1> C++ Control Structures II Chapter 5 </h1>
<div class="code">
  // Flag-controlled while loop.<br>
  // Number guessing game.<br>
<br>
  #include &#060iostream><br>
  #include &#060cstdlib><br>
  #include &#060ctime><br>

  int main()<br>
  {<br>
  <ul>
    <li>int num;</li>
    <li>int guess;</li>
    <li>bool done;</li>
    <br>
    <li>num = (rand() + time(0)) % 100;</li>
    <li>done = false;</li>
    <li>while(!done)</li>
    <li>{</li>
      <ul>
        <li>std::cout << "Enter an integer >= 0 < 100: ";</li>
        <li>std::cin >> guess;</li>
        <li>if (guess == num)</li>
        <li>{</li>
          <ul>
            <li>
              std::cout << "You guessed the correct number!" << std::endl;
            </li>
            <li>done = true;</li>
          </ul>
        <li>}</li>
        <li>else</li>
        <li>{</li>
          <ul>
            <li>if (guess < num)</li>
            <ul>
              <li>std::cout << "Your guess is too low" << endl;</li>
            </ul>
            <li>else</li>
            <ul>
              <li>std::cout << "Your guess is too high" << endl;</li>
            </ul>
          </ul>

        <li>}</li>
      </ul>
    <li>}</li>
  </ul>
}
